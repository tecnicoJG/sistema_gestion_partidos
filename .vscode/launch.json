{
  "version": "1.0.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug API",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/apps/api/src/server.ts",
      "preLaunchTask": "tsc: build - apps/api/tsconfig.json",
      "outFiles": ["${workspaceFolder}/apps/api/dist/**/*.js"],
      "cwd": "${workspaceFolder}/apps/api",
      "runtimeArgs": ["-r", "tsconfig-paths/register"],
      "envFile": "${workspaceFolder}/apps/api/.env"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to API",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}