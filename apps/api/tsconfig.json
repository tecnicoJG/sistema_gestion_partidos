{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "@controller/types": ["../../packages/types/src/index.ts"],
      "@controller/validation": ["../../packages/validation/src/index.ts"],
      "@controller/constants": ["../../packages/constants/src/index.ts"]
    },
    /* API-specific settings */
    "types": ["node", "express"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/constants" },
    { "path": "../../packages/validation" }
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}