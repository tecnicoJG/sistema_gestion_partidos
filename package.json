    "@types/qrcode": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "terser": "^5.46.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "dotenv": "^16.3.1",
    "express": "^4.21.0",
    "ini": "^5.0.0",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.0",
    "tslib": "^2.8.1",
    "zod": "^4.1.12"
  }
