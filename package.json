{
  "name": "controller",
  "version": "1.0.3",
  "minimumVersionRequired": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "concurrently -n api,portal -c blue,magenta \"npm run dev:api\" \"npm run dev:portal\"",
    "dev:api": "nodemon",
    "dev:portal": "vite --config src/modules/portal/vite.config.ts",
    "build": "npm run clean:build && tsc && tsc-alias && npm run copy:assets && npm run minify && npm run build:portal",
    "build:portal": "vite build --config src/modules/portal/vite.config.ts",
    "copy:assets": "node scripts/copy-assets.js",
    "minify": "node scripts/minify.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "check": "npm run format:check && npm run lint && npm run typecheck",
    "fix": "npm run format && npm run lint:fix",
    "clean": "rimraf node_modules dist build",
    "clean:build": "rimraf dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/express": "^4.17.21",
    "@types/ini": "^4.1.1",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.49",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "tailwindcss": "^3.4.17",
    "terser": "^5.46.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^6.0.5"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "dotenv": "^16.3.1",
    "express": "^4.21.0",
    "ini": "^5.0.0",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.1",
    "socket.io": "^4.8.0",
    "tslib": "^2.8.1",
    "zod": "^4.1.12"
  }
}
