{
  "name": "controller",
  "version": "1.0.0",
  "minimumVersionRequired": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/services/api/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "npm run clean:build && tsc && npm run copy:assets && npm run minify",
    "copy:assets": "node scripts/copy-assets.js",
    "minify": "node scripts/minify.js",
    "start": "node dist/services/api/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "check": "npm run format:check && npm run lint && npm run typecheck",
    "fix": "npm run format && npm run lint:fix",
    "clean": "rm -rf node_modules dist build",
    "clean:build": "rm -rf dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/express": "^4.17.21",
    "@types/ini": "^4.1.1",
